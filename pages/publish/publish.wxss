/*publish.wxss*/
page{
  padding-top: 240rpx;
  padding-bottom: 80rpx;
}
.header,.footer{
  position: fixed;
  left: 0rpx;
  box-sizing: border-box;
}
.header{
  top: 0rpx;
  height: 120rpx;
  line-height: 60rpx;
  padding-top: 60rpx;
  padding-left: 20rpx;
}
.footer{
  bottom: 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-top: 1rpx solid #F27C5F;
}
.footer>view{
  width: 375rpx;
}
.footer>view:last-child{
  background: #F27C5F;
  color: #fff;
}

.title{
    width: 100vw;
    height: 100vh;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    background: #eee;
    z-index: 1;
}
.title>view{
    width: 650rpx;
    height: 300rpx;
    background: #fff;
    position: fixed;
    top: 200rpx;
    left: 50rpx;
}
.title>view>input{
    position: absolute;
    left: 0rpx;
    top: 70rpx;
    height: 80rpx;
    width: 650rpx;
    text-align: center;
}
.title>view>view{
    width: 650rpx;
    line-height: 80rpx;
    text-align: center;
    position: absolute;
    bottom: 0rpx;
    left: 0rpx;
    border-top: 1rpx solid #eee;
}

.publish{
    box-sizing: border-box;
    width: 750rpx;
    padding: 10rpx 20rpx;
    margin-top: 20rpx;
}

.set{
  position: fixed;
  top: 120rpx;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
}
.set>view{
  width: 315rpx;
  text-align: center;
  border-right: 1rpx solid #eee;
  box-sizing: border-box;
}
.set>view:last-child{
  width: 120rpx;
  font-weight: 900;
  border:none;
}