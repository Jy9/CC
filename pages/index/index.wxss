.footer{
    width: 80rpx;
    height: 80rpx;
    border: 6rpx solid #000;
    border-radius: 30rpx;
    position: fixed;
    bottom:80rpx;
    right:40rpx;
    opacity: 0.2;
    transition: opacity 0.4s;
}

.card{
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  height: 100%;
  transition: all 0.4s;
}
.card>view{
  width: 600rpx;
  height: 1000rpx;
  background: #fff;
  position:absolute;
  right: 20rpx;
  bottom: 120rpx;
  border-radius: 20rpx;
  box-shadow: -1px 1px 10rpx 0px rgba(0, 0, 0, 0.3);
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.card>view>view>view{
  overflow: hidden;
  line-height: 65rpx;
  margin-top: 10rpx;
}
.card>view>view>view>image{
    width: 50rpx;
    height: 50rpx;
}
.recharge{
  color: #72CE6A;
  margin-left: 40rpx;
}
.card>view>view>image{
  width: 500rpx;
  height: 500rpx;
  margin-left: 30rpx;
}
.card>view>view>image.compile{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top:20rpx;
  right: 20rpx;
}
.card>view>.btn{
  position:absolute;
  bottom:0px;
  left: 0px;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-top: 1px solid #eee;
}
/*card动画  */
@keyframes mycardshow {
  0% {bottom:-1000rpx}
  50% {bottom: 160rpx}
  70% {bottom: 110rpx}
  100% {bottom: 120rpx}
}
@keyframes mycardhide {
  0% {bottom:120rpx}
  70% {bottom: 140rpx}
  100% {bottom: -1000rpx}
}
