/**index.wxss**/
.header{
  width: 750rpx;
  line-height: 60rpx;
  border-bottom: 1px dashed #999;
  padding-bottom: 20rpx;
  padding-left: 40rpx;
  margin-top: 60rpx;
  background: #fff;
  box-sizing: border-box;
}

.container{
  
}

.footer{
    width: 750rpx;
    height: 80rpx;
    background: #fff;
    border-top: 1rpx solid #eee;
    position: fixed;
    bottom:0rpx;
    left:0rpx;
}
.footer>.msg{
    line-height: 70rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
}
.footer>image{
    width: 70rpx;
    height: 70rpx;
    position:absolute;
    top:5rpx;
    right: 20rpx;
}

.card{
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  height: 100%;
  transition: all 0.4s;
}
.card>view{
  width: 600rpx;
  height: 1000rpx;
  background: #fff;
  position:absolute;
  right: 20rpx;
  bottom: 120rpx;
  border-radius: 20rpx;
  box-shadow: -1px 1px 10rpx 0px #999;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.card>view>view>view{
  overflow: hidden;
  line-height: 56rpx;
}
.recharge{
  color: #72CE6A;
  margin-left: 40rpx;
}
.card>view>view>image{
  width: 500rpx;
  height: 500rpx;
  margin-left: 30rpx;
}
.card>view>view>image.compile{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top:20rpx;
  right: 20rpx;
}
.card>view>.btn{
  position:absolute;
  bottom:0px;
  left: 0px;
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  border-top: 1px solid #eee;
}
/*card动画  */
@keyframes mycardshow {
  0% {bottom:-1000rpx}
  70% {bottom: 140rpx}
  100% {bottom: 120rpx}
}
@keyframes mycardhide {
  0% {bottom:120rpx}
  70% {bottom: 140rpx}
  100% {bottom: -1000rpx}
}
