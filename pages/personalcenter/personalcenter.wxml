    <view class='lt {{navclass.content3class}}' id='content3'>
        <view wx:for='{{users}}' wx:for-item='user' class='user' uid='{{user.uid}}' catchtap='userinfo' wx:key="users">
            <image class='userimage' src='{{iconUrl+user.image}}' mode='aspectFill'></image>
            <view class='username fs32'>{{user.name}}</view>
            <view class='userbirthday fs28'>{{user.birthday}}</view>
            <view class='useraddress fs36'>{{user.address}}</view>
            <view class='userregister fs28'>{{user.register}}</view>
        </view>
    </view>
