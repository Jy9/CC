/**personalcenter.wxss**/
.header_back{
  position: absolute;
  top: 80rpx;
  left: 20rpx;
  color: #F27C5F;
}
.bgimage{
  width: 750rpx;
  height: 463.5rpx;
}
.titleimage{
  position: absolute;
  top: 400rpx;
  left: 40rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border:10rpx solid #fff;
}

